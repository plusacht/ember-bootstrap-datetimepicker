  <div class="col-md-9">
    <h1>Ember CLI - bootstrap datetimepicker<br /><small>Date/time picker for ember</small></h1>
    <br />
    <br />
    <div id="example1">
      <a name="example1"></a>
      <h3>Minimum Setup</h3>
      <div>
        <p>
          {{bs-datetimepicker date=model.date2 updateDate=(action (mut model.date2))}}
        </p>
        <p>
          Date: {{model.date2}}
        </p>
        <h5>Code</h5>
        <p>
          <pre>&lt;p&gt;
  \{{bs-datetimepicker date=model.date2 updateDate=(action (mut model.date2))}}
&lt;/p&gt;
        </pre>
        </p>
      </div>
    </div>

    <div id="example1">
      <a name="example1"></a>
      <h3>Minimum Setup (forceDateOutput)</h3>
      <div>
        <p>
          {{bs-datetimepicker date=model.date2 forceDateOutput=true updateDate=(action (mut model.date2))}}
        </p>
        <h5>Code</h5>
        <p>
          <pre>&lt;p&gt;
  \{{bs-datetimepicker date=model.date2 forceDateOutput=true updateDate=(action (mut model.date2))}}
&lt;/p&gt;
        </pre>
        </p>
      </div>
    </div>



    <div id="example2">
      <a name="example2"></a>
      <h3>Init config</h3>

      <div>
        <form class="form" role="form">
          <div class="form-group">
            <label>Date 1</label>
            {{bs-datetimepicker date=model.date1 pickTime=false showToday=false format="Do MMM YYYY" updateDate=(action (mut model.date1))}}
          </div>
          <div class="form-group">
            <label>Date 1 (readonly)</label>
            {{bs-datetimepicker date=model.date1 pickTime=false showToday=false format="DD.MM.YYYY" disabled=true}}
          </div>
        </form>
        <h5>Code</h5>
        <pre>
&lt;form class=&quot;form&quot; role=&quot;form&quot;&gt;
  &lt;div class=&quot;form-group&quot;&gt;
    &lt;label&gt;Date 1&lt;/label&gt;
    \{{bs-datetimepicker date=model.date1 pickTime=false showToday=false format=&quot;Do MMM YYYY&quot;  updateDate=(action (mut model.date1))}}
  &lt;/div&gt;
  &lt;div class=&quot;form-group&quot;&gt;
    &lt;label&gt;Date 1 (readonly)&lt;/label&gt;
    \{{bs-datetimepicker date=model.date1 pickTime=false showToday=false format=&quot;DD.MM.YYYY&quot; disabled=true}}
  &lt;/div&gt;
&lt;/form&gt;</pre>
      </div>
    </div>



    <div id="example3">
      <a name="example3"></a>
      <h3>Min/Max date config</h3>

      <div>
        <form class="form" role="form">
          <div class="form-group">
            <label>Date aware of min/max date</label>
            {{bs-datetimepicker date=model.date2 minDate=model.mindate maxDate=model.maxdate updateDate=(action (mut model.date2))}}
          </div>
          <div class="form-group">
            <label>Mindate</label>
            {{bs-datetimepicker date=model.mindate pickTime=false showToday=false updateDate=(action (mut model.mindate))}}
          </div>
          <div class="form-group">
            <label>Maxdate</label>
            {{bs-datetimepicker date=model.maxdate pickTime=false showToday=false updateDate=(action (mut model.maxdate))}}
          </div>
        </form>
        <h5>Code</h5>
        <p>
          <pre>&lt;form class=&quot;form&quot; role=&quot;form&quot;&gt;
&lt;div class=&quot;form-group&quot;&gt;
  &lt;label&gt;Date aware of min/max date&lt;/label&gt;
  \{{bs-datetimepicker date=model.date2 minDate=model.mindate maxDate=model.maxdate updateDate=(action (mut model.date2))}}
&lt;/div&gt;
&lt;div class=&quot;form-group&quot;&gt;
  &lt;label&gt;Mindate&lt;/label&gt;
  \{{bs-datetimepicker date=model.mindate pickTime=false showToday=false updateDate=(action (mut model.mindate))}}
&lt;/div&gt;
&lt;div class=&quot;form-group&quot;&gt;
  &lt;label&gt;Maxdate&lt;/label&gt;
  \{{bs-datetimepicker date=model.maxdate pickTime=false showToday=false updateDate=(action (mut model.maxdate))}}
&lt;/div&gt;
&lt;/form&gt;</pre>
        </p>
      </div>
    </div>


    <div id="example4">
      <a name="example4"></a>
      <h3>Use Font-Awesome icons</h3>

      <div>
        <form class="form" role="form">
          <div class="form-group">
            <label>Font-Awesome</label>
            {{bs-datetimepicker date=model.date2 dateIcon="fa fa-calendar" icons=model.faicons}}
          </div>
        </form>
        <h5>Code</h5>
        <p>
          <pre>&lt;form class=&quot;form&quot; role=&quot;form&quot;&gt;
&lt;div class=&quot;form-group&quot;&gt;
  &lt;label&gt;Font-Awesome&lt;/label&gt;
  \{{bs-datetimepicker date=model.date2 dateIcon="fa fa-calendar" icons=model.faicons}}
&lt;/div&gt;
          </pre>
        </p>
      </div>
    </div>







    <div id="example5">
      <a name="example5"></a>
      <h3>Template block</h3>

      <div>
        <form class="form" role="form">
          <div class="form-group">
            <label>With template</label>
            {{#bs-datetimepicker date=model.date2}}
              {{input class="form-control" name="Date" placeholder="Date"}}
            {{/bs-datetimepicker}}
          </div>
        </form>
        <h5>Code</h5>
        <p>
          <pre>&lt;form class=&quot;form&quot; role=&quot;form&quot;&gt;
  &lt;div class=&quot;form-group&quot;&gt;
    &lt;label&gt;With template&lt;/label&gt;
    \{{#bs-datetimepicker date=model.date2}}
      \{{input disabled=disabled class=&quot;form-control&quot; name=&quot;Date&quot; placeholder=&quot;Date&quot;}}
    \{{/bs-datetimepicker}}
  &lt;/div&gt;
&lt;/form&gt;
          </pre>
        </p>
      </div>
    </div>



    <div id="example6">
      <a name="example6"></a>
      <h3>No Icon (input field only)</h3>
      <div>
        <p class="noicon">
          {{bs-datetimepicker date=model.date2 noIcon=true}}
        </p>
        <h5>Code</h5>
        <p>
          <pre>&lt;p&gt;
  \{{bs-datetimepicker date=model.date2 noIcon=true}}
&lt;/p&gt;
        </pre>
        </p>
      </div>
    </div>



    <div id="example7">
      <a name="example7"></a>
      <h3>Readonly</h3>
      <div>
        <p class="noicon">
          {{bs-datetimepicker date=model.date2 readonly=true noIcon=true}}
        </p>
        <h5>Code</h5>
        <p>
          <pre>&lt;p&gt;
  \{{bs-datetimepicker date=model.date2 readonly=true noIcon=true}}
&lt;/p&gt;
        </pre>
        </p>
      </div>
    </div>
  </div>
</div>

