    <h1>Ember CLI - bootstrap datetimepicker<br /><small>Date/time picker for ember</small></h1>
    <br />
    <br />
    <div id="example1">
      <a name="example1"></a>
      <h3>Minimum Setup</h3>
      <div>
        <p>
          {{bs-datetimepicker date=date2}}
        </p>
        <h5>Code</h5>
      	<p>
      		<pre>&lt;p&gt;
  \{{bs-datetimepicker date=date2}}
&lt;/p&gt;
        </pre>
      	</p>
    	</div>
   	</div>

    <div id="example1">
      <a name="example1"></a>
      <h3>Minimum Setup (forceDateOutput)</h3>
      <div>
        <p>
          {{bs-datetimepicker date=date2 forceDateOutput=true}}
        </p>
        <h5>Code</h5>
        <p>
          <pre>&lt;p&gt;
  \{{bs-datetimepicker date=date2 forceDateOutput=true}}
&lt;/p&gt;
        </pre>
        </p>
      </div>
    </div>



    <div id="example2">
      <a name="example2"></a>
      <h3>Init config</h3>

      <div>
        <div>
        <form class="form" role="form">
          <div class="form-group">
            <label>Date 1</label>
            {{bs-datetimepicker date=date1 pickTime=false showToday=false format="Do MMM YYYY" textFieldName="date1"}}
          </div>
          <div class="form-group">
            <label>Date 1 (readonly)</label>
            {{bs-datetimepicker date=date1 pickTime=false showToday=false format="DD.MM.YYYY" textFieldName="date1a" disabled=true}}
          </div>
        </form>
        <h5>Code</h5>
	      <pre>
&lt;form class=&quot;form&quot; role=&quot;form&quot;&gt;
  &lt;div class=&quot;form-group&quot;&gt;
    &lt;label&gt;Date 1&lt;/label&gt;
    \{{bs-datetimepicker date=date1 pickTime=false showToday=false format=&quot;Do MMM YYYY&quot; textFieldName=&quot;date1&quot;}}
  &lt;/div&gt;
  &lt;div class=&quot;form-group&quot;&gt;
    &lt;label&gt;Date 1 (readonly)&lt;/label&gt;
    \{{bs-datetimepicker date=date1 pickTime=false showToday=false format=&quot;DD.MM.YYYY&quot; textFieldName=&quot;date1a&quot; disabled=true}}
  &lt;/div&gt;
&lt;/form&gt;</pre>
      </div>
    </div>



		<div id="example3">
      <a name="example3"></a>
      <h3>Min/Max date config</h3>

      <div>
        <form class="form" role="form">
          <div class="form-group">
            <label>Date aware of min/max date</label>
            {{bs-datetimepicker date=date2 minDate=mindate maxDate=maxdate}}
          </div>
          <div class="form-group">
            <label>Mindate</label>
            {{bs-datetimepicker date=mindate pickTime=false showToday=false}}
          </div>
          <div class="form-group">
            <label>Maxdate</label>
            {{bs-datetimepicker date=maxdate pickTime=false showToday=false}}
          </div>
        </form>
        <h5>Code</h5>
	      <p>
	        <pre>&lt;form class=&quot;form&quot; role=&quot;form&quot;&gt;
&lt;div class=&quot;form-group&quot;&gt;
  &lt;label&gt;Date aware of min/max date&lt;/label&gt;
  \{{bs-datetimepicker date=date2 minDate=mindate maxDate=maxdate}}
&lt;/div&gt;
&lt;div class=&quot;form-group&quot;&gt;
  &lt;label&gt;Mindate&lt;/label&gt;
  \{{bs-datetimepicker date=mindate pickTime=false showToday=false}}
&lt;/div&gt;
&lt;div class=&quot;form-group&quot;&gt;
  &lt;label&gt;Maxdate&lt;/label&gt;
  \{{bs-datetimepicker date=maxdate pickTime=false showToday=false}}
&lt;/div&gt;
&lt;/form&gt;</pre>
	      </p>
      </div>
    </div>


